<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <View
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"/>

<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">



    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="220dp"
    android:id="@+id/image_layout"
    android:background="@color/black"
    android:alpha=".9">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:id="@+id/image_place"
        android:background="@drawable/hhplace2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_action_back"
        android:layout_margin="16dp"


        />
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/share_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:id="@+id/black_view"
        android:background="#212121"
        ></View>


    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HARD ROCK CAFE"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/image_layout"
        android:layout_marginTop="-10dp"
        android:textSize="24sp"
        android:typeface="normal"
        android:id="@+id/text_place"
        android:textColor="@color/material_teal"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koregaon Park"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/text_place"
        android:textSize="20sp"
        android:typeface="normal"
        android:textColor="@color/material_teal"/>


    <sudosaints.com.testsample.FloatingActionButton
        android:id="@+id/fabButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|right"
        android:textSize="24sp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/image_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/black_view"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/clock_icon"
                android:layout_centerVertical="true"
                android:background="@drawable/clockicon"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:weightSum="2"
                android:layout_toRightOf="@+id/clock_icon"
                android:layout_marginLeft="40dp">
<com.devspark.robototextview.widget.RobotoTextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Open"
    android:typeface="normal"
    android:textColor="@color/textgray"
    android:textSize="18sp"/>
                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:typeface="normal"
                    android:text="11:00 am To 12:00pm"
                    android:textColor="@color/textgray"
                    android:textSize="16sp"/>

                </LinearLayout>

            </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/layout"
            android:id="@+id/rellay"
            android:layout_width="fill_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/clock_icon1"
                android:layout_centerVertical="true"
                android:background="@drawable/hh_icon"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:weightSum="3"
                android:layout_toRightOf="@+id/clock_icon1"
                android:layout_marginLeft="40dp">
                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Happy Hours"
                    android:typeface="normal"
                    android:layout_weight="1"
                    android:textColor="@color/textgray"
                    android:textSize="18sp"/>
                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Mon To Sun 6:00 To 8:00 "
                    android:layout_weight="1"
                    android:textColor="@color/textgray"
                    android:textSize="16sp"

                    android:typeface="normal"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_below="@+id/rellay"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/divider"
            android:alpha=".6"
            android:layout_height="1dp"
            android:background="@color/grey2">

></View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/horlay"
            android:layout_below="@+id/divider"
            android:background="@color/white">

         <ImageView
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="10dp"
             android:background="@drawable/rating_icon"/>
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/offer_icon1"/>
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/gallery_icon"/>
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/reviews_icon"/>
            </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/horlay1"
            android:layout_below="@+id/horlay"
            android:background="#ffffff">

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:text="34"
                android:typeface="normal"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
/>
            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:text="Offers"
                android:typeface="normal"
                android:textSize="20sp"
                android:textColor="@color/material_teal"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                />

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:text="Gallery"
                android:typeface="normal"
                android:textSize="20sp"
                android:textColor="@color/material_teal"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                />
            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:text="Reviews"
                android:textSize="20sp"
                android:typeface="normal"
                android:textColor="@color/material_teal"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_below="@+id/horlay1"
            android:layout_marginTop="16dp"
            android:alpha=".6"
            android:layout_marginLeft="60dp"
            android:id="@+id/divider2"
            android:layout_height="1dp"
            android:background="@color/grey2"

            ></View>




        <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/divider2"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="fill_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/address_icon"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_action_place"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/address_icon"
                    android:layout_marginLeft="40dp">
                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Koregaon park  cgd8uycgd juhcidbc gbcid cgcijd ciuhn dcidhciudhc hdcundc hnedcnd cijncbd"
                        android:textColor="@color/textgray"
                        android:textSize="18sp"
                       />

                </LinearLayout>

            </RelativeLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View On Map"
                android:textSize="20sp"
                android:elevation="40dp"
                android:background="@color/white"
                android:layout_marginLeft="90dp"
                android:textColor="@color/material_teal"
                android:id="@+id/view_on_map"
                android:layout_below="@+id/layout1" />
            <RelativeLayout
                android:layout_below="@+id/view_on_map"
                android:id="@+id/rellay2"

                android:layout_width="fill_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/phone_icon"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_action_call"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/phone_icon"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/linearLayout">
                    <com.devspark.robototextview.widget.RobotoTextView
                        android:typeface="normal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="8600949056"
                        android:layout_weight="1"
                        android:textColor="@color/textgray"
                        android:textSize="18sp"/>



                </LinearLayout>



</RelativeLayout>

    </RelativeLayout></RelativeLayout>
</RelativeLayout>
    </ScrollView>

</RelativeLayout>

<RelativeLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"

    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >



<RelativeLayout
    android:layout_width="fill_parent"
    android:id="@+id/rellay"
    android:layout_height="wrap_content">
    <com.devspark.robototextview.widget.RobotoEditText
        android:layout_width="fill_parent"
        android:layout_marginRight="60dp"
        android:hint="search happy hours"
        android:textColor="@color/text_color"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/search_edit_text"
        android:layout_height="56dp"
        android:id="@+id/search"/>
    <Button
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_marginRight="20dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/search_button"/>
</RelativeLayout>

    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy hours today"
        android:id="@+id/hhtag"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/rellay"
        android:textColor="@color/material_teal"/>

  <ListView
      android:layout_width="fill_parent"
      android:layout_below="@+id/hhtag"
      android:layout_height="fill_parent"
      android:id="@+id/list"></ListView>


    <sudosaints.com.testsample.FloatingActionButton
        android:id="@+id/fabButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        />


    <SlidingDrawer
        android:id="@+id/SlidingDrawer"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:content="@+id/contentLayout"
        android:handle="@+id/slideButton"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/slideButton"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/transparentbck">

        </RelativeLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:id="@+id/contentLayout"
            android:background="@drawable/rounded_layout"
            xmlns:android="http://schemas.android.com/apk/res/android" >
            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Choose a day"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_margin="4dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:text="MON"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/monday_button"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="Tue"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/tuesday_button"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="WED"
                    android:textColor="@color/white"
                    android:background="@drawable/wednesday_button"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="THUR"
                    android:textColor="@color/white"
                    android:background="@drawable/thursday_button"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="FRI"
                    android:textColor="@color/white"
                    android:background="@drawable/friday_button"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="SAT"
                    android:textColor="@color/white"
                    android:background="@drawable/saturday_button"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="SUN"
                    android:textColor="@color/white"
                    android:background="@drawable/sunday_button"/>
            </LinearLayout>

        </LinearLayout>


    </SlidingDrawer>
</RelativeLayout>